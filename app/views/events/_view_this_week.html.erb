        <div class="p-4 rounded-lg shadow-lg bg-fuchsia-500">
          <p class="text-lg pb-4"><%= Date.today.beginning_of_week.next_occurring(:monday).strftime("%A %d.%m") %></p>
          <% events.where(start_time: Date.today.beginning_of_week.beginning_of_day..Date.today.beginning_of_week.end_of_day).each do |event| %>
            <p>
              <%= event.start_time.strftime('%H:%M') %>:
              <%= event.title %>
            </p>
          <% end %>    
        </div>
